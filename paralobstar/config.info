domainSize 30.          // box side length of the simulation domain
initFile ic.h5  // h5 file containing the initial particle distribution
outDir output           // output directory for particle distribution h5 files
parallel true           // switch for serial or parallel mode
threaded false           // switch for threading
timeStep .01           // fixed time step
timeEnd 50.             // end of the simulation
theta .7                // clumping parameter
softening 0.06        // softening parameter
hilbert true           // switch for Lebesgue or Hilbert curves used for domain decomposition
h5DumpInterval 10        // output particle distribution each h5DumpInterval steps
loadBalancingInterval 10 // obtain a new load distribution each loadBalancingInterval steps
outputRank 0            // standard output only by process with rank outputRank (-1: all ranks)
traceMaterial true      // flag for using materialId in the simulation
